<div class="col-md-12 mt-2">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>
        Pay Accounts
      </h3>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Nickname</th>
              <th>Account Type</th>
              <th>Account Number</th>
              <th>
                <%= link_to 'Create', new_pay_account_path, class: 'btn btn-success' %>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @pay_accounts.each do |pay_account| %>
              <tr>
                <td><%= pay_account.nickname %></td>
                <td><%= pay_account.account_type.humanize %></td>
                <td>
                  <p id="<%= pay_account.id %>-account-number" class="account-number"><%= pay_account.account_number %></p>
                  <button id="<%= pay_account.id %>-hide-btn" type="button" class="btn btn-sm btn-default hide-btn">hide</button>
                </td>
                <td>
                  <%= link_to 'Show', pay_account, class: 'btn btn-warning' %>
                  <%= link_to 'Delete', pay_account, method: :delete, class: 'btn btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
